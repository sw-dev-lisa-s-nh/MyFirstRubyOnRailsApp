<h1 style="color:blue;">Add Instrument:</h1>

<%= form_with model: @instrument, url: instrument_path do |form| %>
    <% if @instrument.errors.any? %>
        <div class="alert alert-danger">
            <% @instrument.errors.full_messages.each do |message| %>
                <div><%=message %></div>
            <% end %>   
        </div> 
    <% end %>

    <div class="mb-3">
    <%= form.label :name %>
    <%=  form.text_field :name, class: "form-control", placeholder: "instrument name" %>
    </div>  

    <div class="mb-3">
        <%= form.submit "Add Instrument", class: "btn btn-primary mb1 bg-navy" %>
    </div>
<% end %>
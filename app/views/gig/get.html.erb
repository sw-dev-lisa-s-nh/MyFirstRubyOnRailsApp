<h1>List of all Gigs:</h1>


<table>
  <thead>
    <tr>
      <th>Id: &nbsp; </th>
      <th>Name:  &nbsp;</th>
      <th>Description: &nbsp; </th>
      <th>Start Time: &nbsp; </th>
      <th>Duration: &nbsp; </th>
      <th>Genre: &nbsp; </th>
      <th>Date:  &nbsp;</th>
      <th>Address: &nbsp; </th>
      <th>Phone:  &nbsp;</th>
      <th>Salary: &nbsp; </th>
      <th>Instrument: &nbsp; </th>
      <th>Date Created: &nbsp; </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gigs.each do |gig| %>
      <tr>
      <td><%= gig.id   %></td>
      <td><%= gig.name   %></td>
      <td><%= gig.description   %></td>
      <td><%= gig.start_time   %></td>
      <td><%= gig.duration   %></td>
      <td><%= gig.genre   %></td>
      <td><%= gig.date   %></td>
      <td><%= gig.address   %></td>
      <td><%= gig.phone   %></td>
      <td><%= gig.salary   %></td>
      <% @instruments.each do |instrument| %>
        <% if  gig.instrument_id == instrument.id %>
            <td><%=  instrument.name %></td>
        <% end %>
      <% end %>    
      <td><%= gig.created_at %></td>
    <% end %>
  </tbody>
</table>


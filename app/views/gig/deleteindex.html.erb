<h1 style="color:blue;">Delete Gig:</h1>

<%= form_with model: @gig, url: new_delete_gig_path do |form| %>

    <div class="mb-3">
    <%= form.label :id %>
    <%=  form.text_field :id, class: "form-control", placeholder: "gig id to delete" %>
    </div>  

   
    <div class="mb-3">
    <%= form.label :planner_id %>
    <%=  form.text_field :planner_id, class: "form-control", placeholder: "valid planner_id" %>
    </div>

    <div class="mb-3">
    <%= form.submit "Delete Gig", class: "btn btn-primary mb1 bg-navy" %>
    </div>

<% end %>

<h1 style="color:blue;">Update Gig:</h1>

<%= form_with model: @gig, url: update_gig_path do |form| %>
    <% if @gig.errors.any? %>
        <div class="alert alert-danger">
            <% @gig.errors.full_messages.each do |message| %>
                <div><%=message %></div>
            <% end %>   
        </div> 
    <% end %>

    <div class="mb-3">
        <%= form.label :gig_id %>
        <%=  form.text_field :id, class: "form-control", placeholder: "valid_gig_id" %>
    </div>

    <div class="mb-3">
        <%= form.label :gig_status %>
        <%=  form.text_field :status, class: "form-control", placeholder: "planned, available, requested, hired, closed, or cancelled" %>
    </div>

    <div class="mb-3">
    <%= form.label :musician_id %>
    <%=  form.text_field :musician_id, class: "form-control", placeholder: "valid musician_id" %>
    </div>

    <div class="mb-3">
    <%= form.label :instrument_id %>
    <%=  form.text_field :instrument_id, class: "form-control", placeholder: "valid instrument_id" %>
    </div>

    <div class="mb-3">
    <%= form.label :planner_id %>
    <%=  form.text_field :planner_id, class: "form-control", placeholder: "valid planner_id" %>
    </div>

    <div class="mb-3">
        <%= form.submit "Update Gig", class: "btn btn-primary mb1 bg-navy" %>
    </div>
<% end %>
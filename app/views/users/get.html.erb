<h1 style="color:blue;">List Users:</h1>

<table>
  <thead>
    <tr>
      <th> Id:  &nbsp; </th>
      <th> Email:  &nbsp; </th>
      <th> First Name: &nbsp;  </th>
      <th> Last Name:  &nbsp;</th>
      <th> Instrument:  &nbsp;</th>
      <th> Date Created:  &nbsp;</th>
      <th> User Role:   &nbsp;</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
      <td><%=  user.id %></td>
      <td><%=  user.email %></td>
      <td><%=  user.first_name %></td>
      <td><%=  user.last_name %></td>
        <% @instruments.each do |instrument| %>
            <% if  user.instrument_id == instrument.id %>
                <td><%=  instrument.name %></td>
            <% end %>
        <% end %>    
      <td><%=  user.created_at %></td>
      <% if user.role == :musician%>
      <td><%=  Musician %></td>
    <% elseif user.role == :planner %>
      <td><%=  Planner %></td>
    <% elseif user.role == :admin %>
      <td><%=  Admin %></td>
    <%else %>
      <td><%= user.role %></td>
      <% end %>
    <% end %>
</tbody>
</table>

<br>

<%= link_to "New user", sign_up_path, class: "btn btn-primary mb1 bg-navy" %>
